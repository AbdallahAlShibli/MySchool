<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminUI.busSupervisor.BusSupervisorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="right"
            android:background="@drawable/ic_box_edit_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableRight="@drawable/ic_baseline_search_24"
                android:hint="Search" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/superVisor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/ic_box_edit_text"
            android:text="  Supervisor Name: Salim Ali" />

        <TextView
            android:id="@+id/superVisor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/ic_box_edit_text"
            android:text="  Supervisor Name: Mohammed Abdullah" />

        <Button
            android:id="@+id/button5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Add new One" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>